{
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    },
    {
      "src": "quartz/package.json", 
      "use": "@vercel/static-build",
      "config": {
        "distDir": "public",
        "buildCommand": "npx quartz build"
      }
    }
  ],
  "routes": [
    {
      "src": "/notes/(.*)",
      "dest": "/quartz/public/$1"
    },
    {
      "src": "/notes",
      "dest": "/quartz/public/index.html"
    },
    {
      "src": "/(.*)",
      "dest": "/dist/$1"
    }
  ]
}